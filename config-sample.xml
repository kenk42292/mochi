
<mochi-config>
    <data>
        <attribute-type>categorical</attribute-type>
    </data>
    
    <training-params>
		<batch-size>10</batch-size>
		<num-epochs>30</num-epochs>
	</training-params>

    <net>
        <input-dim>1,28,28</input-dim>
        <output-dim>10</output-dim>
        
        <layers>
        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>784</input-dim>
	            <output-dim>30</output-dim>
	            <optimizer>sgd</optimizer>
	            <eta>3.0</eta>
	            <gamma>0.9</gamma>
	            <wdecay>0.05</wdecay>
	        </layer>
	        
	        <layer>
	            <type>sigmoid</type>
	        </layer>
	        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>30</input-dim>
	            <output-dim>10</output-dim>
	            <optimizer>sgd</optimizer>
	            <eta>3.0</eta>
	            <gamma>0.9</gamma>
	            <wdecay>0.05</wdecay>
	        </layer>
	        
	        <layer>
	            <type>softmax</type>
	        </layer>
        </layers>
        
        <loss>
            <type>crossentropy</type>
            <dim>10</dim>
        </loss>

    </net>

</mochi-config>



