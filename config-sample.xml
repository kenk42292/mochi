
<mochi-config>
    <data>
        <attribute-type>categorical</attribute-type>
    </data>

	<training-params>
		<batch-size>10</batch-size>
		<num-epochs>13</num-epochs>
	</training-params>

    <net>
        <input-dim>784</input-dim>
        <output-dim>10</output-dim>
        
        <layers>
        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>784</input-dim>
	            <output-dim>300</output-dim>
	            <optimizer>adagrad</optimizer>
	            <eta>0.9</eta>
	            <gamma>0.9</gamma>
	        </layer>
	        
	        <layer>
	            <type>softplus</type>
	        </layer>
	        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>300</input-dim>
	            <output-dim>10</output-dim>
	            <optimizer>adagrad</optimizer>
	            <eta>0.4</eta>
	            <gamma>0.9</gamma>
	        </layer>
	        
	        <layer>
	        	<type>softmax</type>
	        </layer>

        </layers>
        
        <loss>
            <type>crossentropy</type>
        </loss>

    </net>

</mochi-config>



