
<mochi-config>
    <data>
        <attribute-type>categorical</attribute-type>
    </data>
    
    <training-params>
		<batch-size>20</batch-size>
		<num-epochs>10</num-epochs>
	</training-params>

    <net>
        <input-dim>1,28,28</input-dim>
        <output-dim>10</output-dim>
        
        <layers>
	        <layer>
	            <type>convolutional</type>
	            <input-dim>1,28,28</input-dim>
	            <num-kernels>20</num-kernels>
	            <kernel-dim>1,5,5</kernel-dim>
	            <output-dim>20,24,24</output-dim>
	            <optimizer>rmsprop</optimizer>
	            <eta>0.001</eta>
	            <gamma>0.9</gamma>
	        </layer>
	        
	        <layer>
	        	<type>maxpool</type>
	        	<input-dim>20,24,24</input-dim>
	        	<field-dim>2,2</field-dim>
	        	<output-dim>20,12,12</output-dim>
	        </layer>
	        
	        <layer>
	            <type>softplus</type>
	        </layer>
	        
	      	<layer>
	            <type>convolutional</type>
	            <input-dim>20,12,12</input-dim>
	            <num-kernels>20</num-kernels>
	            <kernel-dim>20,3,3</kernel-dim>
	            <output-dim>20,10,10</output-dim>
	            <optimizer>rmsprop</optimizer>
	            <eta>0.001</eta>
	            <gamma>0.9</gamma>
	        </layer>
	        
	        <layer>
	        	<type>maxpool</type>
	        	<input-dim>20,10,10</input-dim>
	        	<field-dim>2,2</field-dim>
	        	<output-dim>20,5,5</output-dim>
	        </layer>
	        
	        <layer>
	            <type>softplus</type>
	        </layer>
	        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>500</input-dim>
	            <output-dim>300</output-dim>
	            <optimizer>adagrad</optimizer>
	            <eta>0.1</eta>
	            <gamma>0.9</gamma>
	        </layer>
	        
	        <layer>
	            <type>sigmoid</type>
	        </layer>
	        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>300</input-dim>
	            <output-dim>10</output-dim>
	            <optimizer>adagrad</optimizer>
	            <eta>0.01</eta>
	            <gamma>0.9</gamma>
	        </layer>
	        
	        <layer>
	            <type>softmax</type>
	        </layer>
        </layers>
        
        <loss>
            <type>crossentropy</type>
            <dim>10</dim>
        </loss>

    </net>

</mochi-config>



