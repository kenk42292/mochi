
<mochi-config>
    <data>
        <attribute-type>categorical</attribute-type>
    </data>
    
    <training-params>
		<batch-size>20</batch-size>
		<num-epochs>50</num-epochs>
	</training-params>

    <net>
        <input-dim>1,28,28</input-dim>
        <output-dim>10</output-dim>
        
        <layers>
	        <layer>
	            <type>convolutional</type>
	            <input-dim>1,28,28</input-dim>
	            <num-kernels>32</num-kernels>
	            <kernel-dim>1,5,5</kernel-dim>
	            <output-dim>32,28,28</output-dim>
	            <mode>same</mode>
	            <optimizer>rmsprop</optimizer>
	            <eta>0.01</eta>
	            <gamma>0.9</gamma>
	            <wdecay>3e-5</wdecay>
	        </layer>
	        
	        <layer>
	        	<type>maxpool</type>
	        	<input-dim>32,28,28</input-dim>
	        	<field-dim>2,2</field-dim>
	        	<output-dim>32,14,14</output-dim>
	        </layer>
	        
	        <layer>
	            <type>softplus</type>
	        </layer>
	        
	      	<layer>
	            <type>convolutional</type>
	            <input-dim>32,14,14</input-dim>
	            <num-kernels>64</num-kernels>
	            <kernel-dim>32,5,5</kernel-dim>
	            <output-dim>64,14,14</output-dim>
	            <mode>same</mode>
	            <optimizer>rmsprop</optimizer>
	            <eta>0.01</eta>
	            <gamma>0.9</gamma>
	            <wdecay>3e-5</wdecay>
	        </layer>
	        
	        <layer>
	        	<type>maxpool</type>
	        	<input-dim>64,14,14</input-dim>
	        	<field-dim>2,2</field-dim>
	        	<output-dim>64,7,7</output-dim>
	        </layer>
	        
	        <layer>
	            <type>softplus</type>
	        </layer>
	        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>3136</input-dim>
	            <output-dim>1000</output-dim>
	            <optimizer>rmsprop</optimizer>
	            <eta>0.005</eta>
	            <gamma>0.9</gamma>
	            <wdecay>3e-5</wdecay>
	        </layer>
	        
	        <layer>
	            <type>sigmoid</type>
	        </layer>
	        
	        <layer>
	            <type>vanillafeedforward</type>
	            <input-dim>1000</input-dim>
	            <output-dim>10</output-dim>
	            <optimizer>rmsprop</optimizer>
	            <eta>0.005</eta>
	            <gamma>0.9</gamma>
	            <wdecay>3e-5</wdecay>
	        </layer>
	        
	        <layer>
	            <type>softmax</type>
	        </layer>
        </layers>
        
        <loss>
            <type>crossentropy</type>
            <dim>10</dim>
        </loss>

    </net>

</mochi-config>



